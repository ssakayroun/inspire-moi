
{{#if us.admin}}

<h1>Welcome {{us.username}}  </h1>
<form method="POST" action="/save_quote">
	<label for="author">Author</label><input name="author" type="text"/><br/>
	<label for="quote">Quote:</label><input name="quote" type="text"/><br/>
	<label for="referrer">Referrer:</label><input name="referrer" type="text" value="admin"/><br/>
	<input type="submit" value="Save quote">	
</form>

{{else}}
<h2>Please enter your admin credentials </h2><br/>
<div>
	<form action="/admin" method="POST">
		<label for="username">Username</label><input name="username" type="text"/>
		<label for="password">Password</label><input name="password" type="password"/>
		<input type="submit" value="Enter">
	</form>
	<p style="color:red;">{{error}}</p>
</div>
{{/if}}